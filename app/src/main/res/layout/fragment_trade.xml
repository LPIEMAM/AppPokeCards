<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragment.TradeFragment"
                                                   android:id="@+id/frameLayout">
    <ImageView
            android:src="@drawable/pokemon_card_back"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:id="@+id/tradeUserCard1ImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            android:layout_marginTop="60dp" app:layout_constraintTop_toBottomOf="@+id/tradeToggleButton"/>
    <ImageView
            android:src="@drawable/pokemon_card_back"
            android:layout_width="110dp"
            android:layout_height="150dp"
            android:id="@+id/tradeUserCard2ImageView"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/tradeUserCard1ImageView"/>
    <Button
            android:text="Pick your card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pickYourCardButton" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/tradeUserCard1ImageView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/guideline" android:layout_marginEnd="8dp"
            style="@style/Widget.MaterialComponents.Button" android:textSize="14sp"/>
    <Button
            android:text="Choose a card"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/chooseACardButton" app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toTopOf="@+id/pickYourCardButton" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" style="@style/Widget.MaterialComponents.Button" android:textSize="14sp"
            android:visibility="gone"/>
    <Button
            android:text="Accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/acceptTradeButton" app:layout_constraintEnd_toStartOf="@+id/guideline"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="68dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Refuse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/refuseTradeButton"
            app:layout_constraintTop_toTopOf="@+id/acceptTradeButton"
            app:layout_constraintStart_toStartOf="@+id/guideline"
            android:layout_marginStart="16dp"/>
    <androidx.constraintlayout.widget.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/guideline"
            app:layout_constraintGuide_percent="0.5"/>
    <ToggleButton
            android:layout_width="161dp"
            android:layout_height="wrap_content"
            android:id="@+id/tradeToggleButton" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:textOff="Offering trade"
            android:textOn="Looking for trade" android:checked="false"/>
    <androidx.constraintlayout.widget.Group android:layout_width="wrap_content" android:layout_height="wrap_content"
                                            android:id="@+id/acceptRefuseTradeGroup"
                                            app:constraint_referenced_ids="refuseTradeButton,acceptTradeButton"
                                            android:visibility="gone"/>
    <Button
            android:text="Offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/validateButton"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginBottom="68dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"/>
    <Button
            android:text="Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/doneButton" app:layout_constraintStart_toStartOf="@+id/validateButton"
            app:layout_constraintTop_toTopOf="@+id/validateButton"
            app:layout_constraintEnd_toEndOf="@+id/validateButton" android:visibility="gone"/>
    <ImageView
            android:src="@drawable/ic_trade_black_24px"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageView8" app:layout_constraintEnd_toStartOf="@+id/tradeUserCard2ImageView"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toEndOf="@+id/tradeUserCard1ImageView"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/tradeUserCard2ImageView" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/chooseACardButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>