<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".fragment.UserCardDetailFragment" android:id="@+id/frameLayout">

    <!-- TODO: Update blank fragment layout -->

    <ImageView
            android:src="@drawable/pokemon_card_back"
            android:layout_width="125dp"
            android:layout_height="170dp" android:id="@+id/userCardDetailImageViewCard"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Pokemon Name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userCardDetailPokemonName"
            app:layout_constraintTop_toBottomOf="@+id/userCardDetailImageViewCard"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="12dp"/>
    <TextView
            android:text="Pokemon Type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userCardDetailPokemonType"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userCardDetailPokemonName"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Pokedex Number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userCardDetailPokedexNumber"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userCardDetailPokemonType"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="Card Version"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userCardDetailCardVersion"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userCardDetailPokedexNumber"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <TextView
            android:text="Pokemon Description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userCardDetailPokemonDescription"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/userCardDetailCardVersion"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
</android.support.constraint.ConstraintLayout>