<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="145dp"
                android:id="@+id/allCardsImageViewCard"
                android:contentDescription="Pokemon Card" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:srcCompat="@drawable/pokemon_card_back" android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp" android:layout_marginBottom="2dp" android:layout_marginTop="2dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c0000000" android:id="@+id/filter" android:visibility="visible"
            android:backgroundTint="@android:color/background_dark">

    </View>
</FrameLayout>