<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context="lpiemam.com.apppokecards.fragment.ShopFragment"
                                                   android:id="@+id/shopConstraintLayout" android:clickable="true">
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/shopRecyclerView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
    <ImageView
            android:src="@drawable/coins"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:id="@+id/imageView2" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="65dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="User Coins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userCoinsTextView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" app:layout_constraintStart_toEndOf="@+id/imageView2"
            android:layout_marginStart="8dp" android:textSize="12sp"/>
    <Button
            android:text="Acheter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buyPackButton" android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/shopRecyclerView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="60dp" android:background="@color/colorAccent"
            android:textColor="@android:color/white" style="@style/Widget.AppCompat.Button.Borderless.Colored"/>
</androidx.constraintlayout.widget.ConstraintLayout>
