<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:context=".fragment.UserCardsFragment"
                                                   android:id="@+id/collectionConstraintLayout"
                                                   android:background="@color/design_default_color_background">

    <!-- TODO: Update blank fragment layout -->


    <androidx.appcompat.widget.SearchView
            android:layout_width="0dp"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
            android:layoutDirection="rtl" android:id="@+id/collectionSearchView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>
    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/collectionRecyclerView" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/collectionSearchView"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:src="@android:drawable/ic_input_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/floatingActionButtonAddPokemon"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:backgroundTint="@color/colorAccent" android:tint="@android:color/white" android:focusable="true"
            app:useCompatPadding="false" android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>